---
layout: layouts/default.njk
pagefind:
  type: Topic
---

<div class="page-banner">
  <div class="l-wrapper">
    <div class="l-stack-basic">
      <div class="nametag">
        <span class="nametag-badge subhead">Topic</span>
        <div class="nametag-text">
          {% icon icon %}
          <h2 class="h1">{{ title }}</h2>
        </div>
      </div>
      <p>{{ content | md | safe}}</p>
      <p><a href="/" class="page-banner-back subhead">{% icon "arrow-u-up-left" %} Back to all topics</a></p>
    </div>
  </div>
</div>

<div class="l-wrapper">
  <div class="l-section">

  <div class="play-list-links">
    <h3>Strategies</h3>
    <ul class="l-stack-basic">
    {%- for play in collections[id + '-strategies'] -%}
    <li class="strategy-card">
      <a href="{{ play.url }}">
        <span>{{ play.data.title }}</span>
        {% icon 'arrow-right' %}
      </a>
    </li>
    {%- endfor -%}
    </ul>

    {%- if related.length > 1 -%}
    <h3>Related strategies</h3>
    {%- for item in related -%}
      <h4>{{ collections.topics[item].data.title }}</h4>
      <ul class="l-stack-basic">
       {%- for play in collections[item + '-strategies'] -%}
          <li class="strategy-card">
            <a href="{{ play.url }}">{{ play.data.title }}</a>
          </li>
        {%- endfor -%}
      </ul>
    {%- endfor -%}
    {%- endif -%}
  </div>
  </div>
</div>