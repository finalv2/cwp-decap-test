---
layout: layouts/default.njk
pageIndex: all
pagefind:
  type: story
---

{%- set resourceData -%}
  {%- for relatedResource in resources -%}
    {%- for item in collections.resources -%}
      {%- if item.data.title === relatedResource -%}
        {{ resourceCard({
          filetype: item.data.filetype,
          title: item.data.title,
          description: item.content,
          url: item.data.url,
          file: item.data.file
          })
        }}
      {%- endif -%}
    {%- endfor -%}
  {%- endfor -%}
{%- endset -%}

<div class="page-banner" data-type="story" data-width="full" data-pagefind-filter="pageType:Story" style="--background: url('{%- if image -%}{{ image }}{%- else -%}/images/banners/story.jpg{%- endif -%}')">
  <div class="l-wrapper">
      <div class="nametag">
        <span class="nametag-badge subhead">{{ type }}</span>
        <div class="nametag-text">
          <h2 class="h1" data-pagefind-meta="title" data-pagefind-weight="9">{{ title }}</h2>
        </div>
      </div>
      <div class="page-topics" data-pagefind-weight="0.5">
        <h3 class="sr-only">Topics</h3>
        <ul>
          {%- for topic in collections.topics -%}
            {%- for tag in tags -%}
              {%- if topic.data.id == tag -%}
                <li><a href="{{ topic.url }}">{% icon topic.data.icon %} {{ topic.data.title }}</a></li>
                {%- endif -%}
            {%- endfor -%}
          {%- endfor -%}
        </ul>
      </div>
      <p class="subhead">Written by {{ author }} on {{ date | humanDate }}</p>
    </div>

  <div class="page-banner-img"></div>
</div>

<div class="l-wrapper">
<div class="l-section">
<div class="l-wrapper-text l-center">
<div class="l-stack">
      {{ content | md | safe }}

      {%- if resourceData !== "" -%}
      <h2>Resources</h2>
      {{ resourceData | safe }}
    {%- endif -%}
</div>
</div>
</div>
</div>