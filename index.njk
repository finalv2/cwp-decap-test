---
layout: "layouts/default.njk"
pageIndex: all
class: home
tags: ["noTopic"]
banner:
  image: /images/banners/home.jpg
pagefindTitle: "Home"
pagefind:
  type: Page
eleventyComputed:
  description: "{{ home.description }}"
  pageCss: "{% include 'css/pages/home.css' %}"
---

{%- from '_macros/page-banner.njk' import pageBanner with context -%}
{%- from '_macros/resource-card.njk' import resourceCard -%}
{%- from '_macros/topic-card.njk' import topicCard %}
{%- from '_macros/story-card.njk' import storyCard %}

{{ pageBanner({
  header: "Welcome to the Child&nbsp;Welfare Playbook",
  subheader: home.bannerSubheader,
  image: banner.image
  })
}}

<section class="l-section">
  <div class="l-wrapper">
    <header class="home-header l-stack">
      <div>
        <h2 id="browse-topics">{{ home.topicHeader }}</h2>
        <p>{{ home.topicSubheader }}</p>
      </div>
    </header>
    <div class="l-grid">
      <div class="l-grid topic-grid">
        {%- for topic in collections.topics -%}
          {%- if topic.url != false -%}
            {{ topicCard({
                url: topic.url,
                id: topic.data.id,
                icon: topic.data.icon,
                title: topic.data.title,
                summary: topic.data.summary
              })
            }}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<section class="l-section">
  <div class="l-wrapper">
    <header class="home-header l-stack">
      <div>
        <h2>{{ home.storyHeader }}</h2>
        <p> {{ home.storySubheader }}</p>
      </div>
    </header>

    {%- for story in collections.stories -%}
      {%- if story.data.featured -%}
        {{ storyCard({
            image: story.data.image,
            type: story.data.type,
            title: story.data.title,
            description: story.data.description,
            author: story.data.author,
            date: story.date,
            url: story.url
          })
        }}
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>